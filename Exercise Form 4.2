Js:- 



let dateArray = [];

function call() {
    const firstName = document.getElementById('firstName').value;
    const lastName = document.getElementById('lastName').value;
    const mobileNumber = document.getElementById('mobileNumber').value;
    const dob = document.getElementById('dob').value;

    if (!firstName) {
        alert('First name is required.');
        return;
    }
    if (firstName.length < 3) {
        alert('First name must be at least 3 letters long.');
        return;
    }

    if (!lastName) {
        alert('Last name is required.');
        return;
    }
    if (lastName.length < 3) {
        alert('Last name must be at least 3 letters long.');
        return;
    }
     if (!mobileNumber) 
    {
        alert('Mobile Number is required');
        return;
    } 
    if (mobileNumber && !/^[0-9]{10}$/.test(mobileNumber)) {
        alert('If provided, mobile number must be exactly 10 digits.');
        return;
    }
    if (!dob) 
    {
        alert('Date of Birth is required');
        return;
    }

    if (dob) {
        const dobDate = new Date(dob);
        const today = new Date();
        if (isNaN(dobDate.getTime()) || dobDate >= today) {
            alert('If provided, date of birth must be a valid date in the past.');
            return;
        }
    }

    const formData = {
        first_name: firstName,
        last_name: lastName,
        mobile_number: mobileNumber || undefined,
        dob: dob || undefined 
    };

    dateArray.push(formData);

    console.log(dateArray);

    document.getElementById('myForm').reset();

    alert('Values inserted');
}


